<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheet/style5.css">
</head>
<body>
    <div class="navbar">
        <h1>inkWell</h1>

        <a href="/home">Home</a>
        <a href="/create">create</a>
        <a href="/mypost">myposts</a>
        <a href="/profile">profile</a>
        <a href="/search">search</a>
        <a href="/logout">Logout</a>
    </div>
    <div class="mypost">
        <h2><%= (user.posts.length > 0)?"These are your posts:-":"You have made no post yet" %></h2>
        <% user.posts.forEach((element)=>{ %>
            <div class="post">
                <h4>@<%= user.username %></h4>
                <% if(element.image) {%>
                    <img src=<%="./images/"+element.image %>>
                <% } %>
                <p><%= element.content %></p>
                <a href="#" class="like-toggle" data-id="<%= element._id %>">
                <span class="heart"><%= (element.likes.includes(user._id)) ? "‚ù§Ô∏è" : "ü§ç" %></span>
                <span class="count"><%= element.likes.length %></span>
                </a>
                <a href="/edit/<%=element._id %>">‚úèÔ∏è</a>
                <a href="/delete/<%=element._id%>">üóë</a>
           </div>
       <% }) %>
    </div>
</body>
</html>
<script>
  document.querySelectorAll('.like-toggle').forEach(link => {
    link.addEventListener('click', async (e) => {
      e.preventDefault();

      const postId = link.getAttribute('data-id');

      try {
        const res = await fetch(`/like/${postId}`, {
          method: 'GET'
        });

        const data = await res.json();

        if (data.success) {
          const heart = link.querySelector('.heart');
          const count = link.querySelector('.count');

          heart.textContent = data.liked ? "‚ù§Ô∏è" : "ü§ç";
          count.textContent = data.likeCount;
        }
      } catch (err) {
        console.error("Toggle like failed", err);
      }
    });
  });
</script>

